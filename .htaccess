RewriteEngine On

RewriteRule ^static/([^/]+) index.php?action=static&page=$1

RewriteRule ^browse index.php?action=browse

RewriteRule ^gospel$ index.php?action=gospel
RewriteRule ^gospel/([^/]+) index.php?action=gospel&page=$1

RewriteRule ^outline$ index.php?action=outline
RewriteRule ^outline/([^/]+) index.php?action=outline&page=$1

RewriteRule ^get_verses/([^/]+)/([^/]+)/([^/]+)$ index.php?action=get_verses&languages=$1&book=$2&chapter=$3
RewriteRule ^get_verses/([^/]+)/([^/]+)/([^/]+)/([^/]+) index.php?action=get_verses&languages=$1&book=$2&chapter=$3&range=$4

RewriteRule ^retrieve/([^/]+)/ranges=(.*) index.php?action=retrieve&language=$1&ranges=$2

RewriteRule ^retrieve/ranges=(.*) index.php?action=retrieve&language=UCV&ranges=$1
